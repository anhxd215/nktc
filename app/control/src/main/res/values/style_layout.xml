<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayout_vertical_back">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bow_divider</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="LinearLayout_horizontal_back">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bow_divider</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="LinearLayout_vertical_front">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_control_4dp_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="LinearLayout_horizontal_front">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_control_4dp_background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="LinearLayout_vertical_no_setup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="LinearLayout_horizontal_no_setup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>