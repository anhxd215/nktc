<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".employeeActivity">

    <TextView
        style="@style/TextView_Content_Left"
        android:text="Cập nhập thông tin của bạn để sử dụng phần mềm :" />

    <LinearLayout style="@style/LinearLayout_vertical">

        <EditText
            android:id="@+id/etName"
            style="@style/EditText_Full"
            android:hint="Họ và tên" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/EditText_Full"
            android:hint="Email" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayout_Horizontal">

        <ImageView
            android:id="@+id/imgAvatar"
            style="@style/ImageView_150"
            android:background="@color/Yellow" />

        <LinearLayout style="@style/LinearLayout_vertical">

            <EditText
                android:id="@+id/etPhone"
                style="@style/EditText_Full"
                android:hint="Số điện thoại:" />

            <TextView
                style="@style/TextView_Content_Left"
                android:text="Chức vụ :" />

            <Spinner
                android:id="@+id/spPosition"
                style="@style/Spinner_style" />
        </LinearLayout>


    </LinearLayout>
    <!--Hết phần thông tin nhanh, chuyển sang phần thông tin mở rộng -->
    <LinearLayout style="@style/LinearLayout_vertical">

        <ExpandableListView
            android:id="@+id/exList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout_Horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Button"
            android:text="Hủy bỏ" />

        <Button
            android:id="@+id/btnUpdate"
            style="@style/Button"
            android:text="Cập nhập" />
    </LinearLayout>

</LinearLayout>