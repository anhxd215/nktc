<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayout_vertical_back"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout style="@style/LinearLayout_vertical_front">

        <EditText
            android:id="@+id/textHome"
            style="@style/EditText_Full"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/person_24x24dp"
            android:hint="Test thử EditText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            style="@style/Button_brown_border"
            android:layout_margin="0dp"
            android:text="Đéo cập nhập"
            android:background="@drawable/button_press_brown_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Ghi cái lều gì đó vào đây" />

    </LinearLayout>
</LinearLayout>