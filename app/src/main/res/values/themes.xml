<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nktc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bow_primary</item>
        <item name="colorPrimaryVariant">@color/bow_accent</item>
        <item name="colorOnPrimary">@color/bow_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bow_accent</item>
        <item name="colorSecondaryVariant">@color/bow_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Nktc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nktc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nktc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

